{% extends "Admin/layout.html.twig" %} {# 管理者用画面のレイアウトテンプレートを継承 #}

{% block title %}お問い合わせ管理{% endblock %} {# タイトルブロックの設定 #}

{% block body %}
<h2 class="sub-header">お問い合わせ管理 - {{ inquiry.id }}</h2>

{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ inquiry.id }}</td>
            </tr>
            <tr>
                <th>お名前</th>
                <td>{{ inquiry.name }}</td>
            </tr>
            <tr>
                <th>メールアドレス</th>
                <td>{{ inquiry.email }}</td>
            </tr>
            <tr>
                <th>電話番号</th>
                <td>{{ inquiry.tel }}</td>
            </tr>
            <tr>
                <th>種別</th>
                <td>{% if inquiry.type == '公演について' %}公演について{% else %}その他{% endif %}</td>
            </tr>
            <tr>
                <th>内容</th>
                <td>{{ inquiry.content }}</td>
            </tr>
            <tr>
                <th>ステータス</th>
                <td>
                    {{ form_widget(form.processStatus, {"attr": {"class":"form-control"}} ) }} {# Inquiry/index.html.twigから$formをレンダリングし、ウィジェットとして出力 #}
                    {{ form_errors(form.processStatus) }} {# フィールドに入力間違いがあった場合、エラーメッセージを出力 #}
                </td>
            </tr>
            <tr>
                <th>対応メモ</th>
                <td>
                    {{ form_widget(form.processMemo, {"attr": {"class":"form-control"}} ) }} {# Inquiry/index.html.twigから$formをレンダリングし、ウィジェットとして出力 #}
                    {{ form_errors(form.processMemo) }} {# フィールドに入力間違いがあった場合、エラーメッセージを出力 #}
                </td>
            </tr>
        </tbody>
    </table>

    <div class="text-center">
        {{ form_widget(form.submit, {"attr": {"class":"btn btn-primary"}}) }}
    </div>

{{ form_end(form) }}　{# フォームの終了タグを出力 #}

{% endblock %}